#!/bin/bash

# set -x

# Удаляем все контейнеры и кешированные данные
docker compose down
docker ps -a | grep -q kvaspro-sphinx && docker rm kvaspro-sphinx
docker system prune -f 

# Запускаем сборку
[[ -n "${1}" && "${1}" = build ]] && build="--build"
docker compose up ${build} 

